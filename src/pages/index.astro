---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import RealScoutSearch from '../components/widgets/RealScoutSearch.astro';
import RealScoutListings from '../components/RealScoutListings.astro';
import TestimonialCarousel from '../components/widgets/TestimonialCarousel.astro';
import SmartFeatures from '../components/SmartFeatures.astro';
---

<Layout title="Luxury Homes at Lone Mountain | Las Vegas Real Estate">
  <main>
    <!-- Hero Section -->
    <HeroSection />

    <!-- Smart Features Section -->
    <SmartFeatures />

    <!-- Property Search Section -->
    <section class="search-section">
      <div class="container">
        <h2>Find Your Dream Home</h2>
        <p>Discover the perfect property with our advanced search tools</p>
        <RealScoutSearch />
      </div>
    </section>

    <!-- Featured Properties Section -->
    <RealScoutListings 
      minPrice="500000"
      propertyTypes="SFR,MF"
      sortOrder="PRICE_HIGH"
      limit={6}
    />

    <!-- Testimonials Section -->
    <section class="testimonials-section">
      <div class="container">
        <h2>What Our Clients Say</h2>
        <TestimonialCarousel />
      </div>
    </section>

    <!-- Market Stats Section -->
    <section class="market-stats">
      <div class="container">
        <h2>Lone Mountain Market Insights</h2>
        <div class="stats-grid">
          <div class="stat-card">
            <h3>Average Price</h3>
            <p class="stat-value">$875,000</p>
            <p class="stat-trend positive">↑ 5.2% from last year</p>
          </div>
          <div class="stat-card">
            <h3>Days on Market</h3>
            <p class="stat-value">32</p>
            <p class="stat-trend negative">↓ 12% from last month</p>
          </div>
          <div class="stat-card">
            <h3>Available Homes</h3>
            <p class="stat-value">45</p>
            <p class="stat-trend">Updated daily</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "RealEstateAgent",
  "name": "Homes at Lone Mountain",
  "url": "https://www.homesatlonemountain.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Las Vegas",
    "addressRegion": "NV",
    "postalCode": "89129",
    "addressCountry": "US"
  },
  "makesOffer": [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "House",
        "name": "Luxury Mountain Estate",
        "description": "5 bedroom luxury home with mountain views, pool and smart home features",
        "numberOfRooms": 5,
        "floorSize": {
          "@type": "QuantitativeValue",
          "value": 4500,
          "unitCode": "FTK"
        },
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "123 Mountain Ridge Dr",
          "addressLocality": "Las Vegas",
          "addressRegion": "NV",
          "postalCode": "89129",
          "addressCountry": "US"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 36.2550,
          "longitude": -115.2830
        },
        "image": "/images/luxury-estate.jpg",
        "offers": {
          "@type": "Offer",
          "price": 1250000,
          "priceCurrency": "USD",
          "availability": "https://schema.org/InStock"
        }
      }
    }
  ]
}
</script>

<style>
  .container {
    max-width: var(--container-max-width, 1200px);
    margin: 0 auto;
    padding: 0 var(--container-padding, 1rem);
  }

  section {
    padding: var(--section-padding, 4rem) 0;
  }

  h2 {
    font-size: 2.5rem;
    color: var(--color-primary-dark);
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .search-section {
    background: var(--color-background);
    text-align: center;
  }

  .search-section p {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--color-text);
    font-size: 1.125rem;
  }

  .testimonials-section {
    background: white;
  }

  .market-stats {
    background: var(--color-background);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .stat-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    text-align: center;
  }

  .stat-card h3 {
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary-dark);
    margin-bottom: 0.5rem;
  }

  .stat-trend {
    font-size: 0.875rem;
    color: var(--color-text);
  }

  .stat-trend.positive {
    color: #16B286;
  }

  .stat-trend.negative {
    color: #DC2626;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .stat-card {
      padding: 1.5rem;
    }

    .stat-value {
      font-size: 2rem;
    }
  }
</style> 