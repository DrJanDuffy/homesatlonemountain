---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Luxury homes at Lone Mountain, Las Vegas",
  image = "/images/og-image.jpg"
} = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0A2540" />

    <!-- Preload Critical Assets -->
    <link rel="preconnect" href="https://em.realscout.com" />
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />

    <!-- RealScout Widget Script -->
    <script 
      src="https://em.realscout.com/widgets/realscout-web-components.umd.js" 
      type="module"
      crossorigin="anonymous"
      integrity="sha384-PLACEHOLDER"
    ></script>

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "RealEstateAgent",
        "name": "Homes at Lone Mountain",
        "image": "/images/logo.png",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Las Vegas",
          "addressRegion": "NV"
        },
        "url": "https://homesatlonemountain.com",
        "telephone": "+1-XXX-XXX-XXXX",
        "priceRange": "$$$"
      }
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #0A2540;
    --color-secondary: #3A8DDE;
    --color-accent: #16B286;
    --color-background: #F7F9FC;
    --color-buyer: #3A8DDE;
    --color-seller: #16B286;
    --container-max-width: 1200px;
    --container-padding: 1rem;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.12);
    --radius-sm: 4px;
    --radius-md: 8px;
    --transition: 0.3s ease;
  }

  @font-face {
    font-family: 'Inter var';
    src: url('/fonts/inter-var.woff2') format('woff2');
    font-weight: 100 900;
    font-display: swap;
  }

  html {
    font-family: 'Inter var', system-ui, sans-serif;
    background: var(--color-background);
    color: var(--color-primary);
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  .container {
    width: 100%;
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 calc(var(--container-padding) / 2);
    }
  }

  /* RealScout Widget Styles */
  realscout-office-listings,
  realscout-advanced-search {
    --rs-primary-color: var(--color-primary);
    --rs-secondary-color: var(--color-secondary);
    --rs-accent-color: var(--color-accent);
    --rs-background-color: var(--color-background);
    --rs-listing-divider-color: var(--color-secondary);
    --rs-button-text-color: white;
    --rs-button-background: var(--color-secondary);
    --rs-widget-width: 100%;
    --rs-widget-min-height: 480px;
    --rs-widget-z-index: 1000;
    width: 100%;
  }
</style> 